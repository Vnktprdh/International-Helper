<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePostACtivity"
    android:background="@drawable/gradient"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/imageViewBigpropic"
        android:visibility="gone">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Update Post"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        android:textColor="#333"
        android:textSize="22sp"
        android:id="@+id/profileheader"
        android:layout_marginBottom="30dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:id="@+id/imageViewAPback"
        android:src="@drawable/ic_baseline_arrow_back_24"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileheader">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardViewMain"
                app:cardElevation="0dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.github.florent37.shapeofview.shapes.RoundRectView
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        app:shape_roundRect_topRightRadius="10dp"
                        app:shape_roundRect_topLeftRadius="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="#22000000"
                            >

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_photo"
                                android:onClick="selectImage"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="190dp"
                                android:id="@+id/show_selected_image"
                                android:scaleType="centerCrop">

                            </ImageView>

                            <!--                        <ImageView-->
                            <!--                            android:layout_width="30dp"-->
                            <!--                            android:layout_height="30dp"-->
                            <!--                            android:layout_margin="20dp"-->
                            <!--                            android:src="@drawable/ic_menu_camera"-->
                            <!--                            android:onClick="selectImage"-->
                            <!--                            android:layout_alignParentRight="true"/>-->
                        </RelativeLayout>
                    </com.github.florent37.shapeofview.shapes.RoundRectView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/selectedImagesRV"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Title"
                            android:textColor="#333"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            >

                            <EditText
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right|center_vertical"
                                android:layout_gravity="center_vertical"
                                android:textColor="#9E333333"
                                android:textSize="18sp"
                                android:padding="10dp"
                                android:background="#ffff"
                                android:hint="Title"
                                android:inputType="textMultiLine"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Category"
                            android:textColor="#333"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            >

                            <Spinner
                                android:id="@+id/catagory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right|center_vertical"
                                android:layout_gravity="center_vertical"
                                android:textColor="#9E333333"
                                android:textSize="18sp"
                                android:padding="10dp"

                                android:background="@drawable/post_item_background"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:overlapAnchor="false"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="selling"
                            android:textColor="#333"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            >

                            <EditText
                                android:id="@+id/w_r_u_selling"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right|center_vertical"
                                android:textColor="#9E333333"
                                android:layout_gravity="center_vertical"
                                android:textSize="18sp"

                                android:padding="10dp"
                                android:background="#ffff"
                                android:hint="What are u selling?"
                                android:inputType="textMultiLine"
                                />


                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Price"
                            android:textColor="#333"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            >

                            <EditText
                                android:id="@+id/price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Price"
                                android:inputType="number"
                                android:gravity="right|center_vertical"
                                android:layout_gravity="center_vertical"
                                android:textColor="#9E333333"
                                android:textSize="18sp"
                                android:padding="10dp"
                                android:background="#ffff"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Location"
                            android:textColor="#333"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            >


                            <EditText
                                android:id="@+id/add_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right|center_vertical"
                                android:layout_gravity="center_vertical"
                                android:textColor="#9E333333"
                                android:textSize="18sp"
                                android:padding="10dp"
                                android:background="#ffff"
                                android:hint="Add Location"
                                android:inputType="textMultiLine"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <com.github.florent37.shapeofview.shapes.RoundRectView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:shape_roundRect_bottomRightRadius="10dp"
                        app:shape_roundRect_bottomLeftRadius="10dp"
                        android:onClick="updatePost"
                        android:id="@+id/ShapeOfViewPSave">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center_horizontal"
                            android:background="#37CAA841"
                            android:layout_gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Update post"
                                android:textSize="22sp"
                                android:layout_marginLeft="-5dp"
                                android:layout_gravity="center"
                                android:drawablePadding="5dp"
                                android:drawableTint="#675233"
                                android:drawableLeft="@drawable/ic_baseline_check_24"
                                android:textColor="#675233"/>
                        </LinearLayout>
                    </com.github.florent37.shapeofview.shapes.RoundRectView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

